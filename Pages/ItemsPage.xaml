<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            xmlns:model="clr-namespace:Inventory.Models"  
            xmlns:viewmodel="clr-namespace:Inventory.ViewModels"  
            x:DataType="viewmodel:ItemsViewModel"  
            Title="{Binding Title}"  
            x:Class="Inventory.Pages.ItemsPage">

    <Grid ColumnDefinitions="*,*"  
         ColumnSpacing="5"  
         RowDefinitions="*,Auto"  
         RowSpacing="0">
        <HorizontalStackLayout Padding="10" Spacing="10" HorizontalOptions="Center">
            <Button Text="Add New Item"
               Command="{Binding AddItemCommand}"
               IsEnabled="{Binding IsNotBusy}"
               Grid.RowSpan="1"
               Grid.ColumnSpan="2"
               Margin="8"/>
            <Button Text="Back"
               Command="{Binding GoBackCommand}"
               IsEnabled="{Binding IsNotBusy}"
               Grid.Row="1"
               Margin="8"/>
        </HorizontalStackLayout>

        <CollectionView BackgroundColor="Transparent"  
                       Grid.ColumnSpan="2"  
                       ItemsSource="{Binding Items}"  
                       SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Item">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem  
                                   CommandParameter="{Binding .}"  
                                   Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ItemsViewModel}}, Path=RemoveItemCommand}"  
                                   BackgroundColor="Red"
                                   Text="Remove"/>
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Grid Padding="10">
                            <Border StrokeShape="RoundRectangle 10"  
                                   HeightRequest="125"  
                                   Padding="0">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="{Binding .}"  
                                                         Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ItemsViewModel}}, Path=GoToDetailsCommand}" />
                                </Border.GestureRecognizers>
                                <Grid Padding="0"  
                                     ColumnDefinitions="125, *">
                                    <Image Grid.Column="0"  
                                          Aspect="AspectFill"  
                                          Source="{Binding ImageUrl}"  
                                          WidthRequest="50"  
                                          HeightRequest="50" />
                                    <VerticalStackLayout Grid.Column="1"  
                                                        Padding="10"  
                                                        VerticalOptions="Center"  
                                                        HorizontalOptions="Center">
                                        <Label Text="{Binding Name}"  
                                              Style="{StaticResource Headline}" />
                                        <Label Text="{Binding Make}"  
                                              Style="{StaticResource SubHeadline}" />
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <ActivityIndicator IsVisible="{Binding IsBusy}"  
                          IsRunning="{Binding IsBusy}"  
                          HorizontalOptions="Center"  
                          VerticalOptions="Center"  
                          Grid.RowSpan="2"  
                          Grid.ColumnSpan="2" />
    </Grid>
</ContentPage>